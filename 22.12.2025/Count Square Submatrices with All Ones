class Solution(object):
    def countSquares(self, matrix):
        """
        :type matrix: List[List[int]]
        :rtype: int
        """
        n, m = len(matrix), len(matrix[0])
        total = 0

        for i in range(n):
            for j in range(m):
                if matrix[i][j] == 1:
                    if i and j:
                        matrix[i][j] = min(matrix[i-1][j-1], matrix[i-1][j], matrix[i][j-1])+1
                    total += matrix[i][j]

        return total
