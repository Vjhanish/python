import heapq

class Solution:
    def maxAverageRatio(self, classes, extraStudents):
        def gain(p, t):
            return (p + 1.0) / (t + 1) - p / float(t)

        heap = []
        for p, t in classes:
            heapq.heappush(heap, (-gain(p, t), p, t))


        heapq.heapify(heap)
        
        for _ in range(extraStudents):
            g, p, t = heapq.heappop(heap)
            p += 1
            t += 1
            heapq.heappush(heap, (-gain(p, t), p, t))

        total = 0.0
        for _, p, t in heap:
            total += float(p) / t

        return total / len(classes)
