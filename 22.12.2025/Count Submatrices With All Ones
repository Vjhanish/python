class Solution(object):
    def numSubmat(self, mat):
        """
        :type mat: List[List[int]]
        :rtype: int
        """
        m, n = len(mat), len(mat[0])
        heights = [0] * n
        result = 0
        
        for row in mat:
            # Update histogram heights
            for j in range(n):
                heights[j] = heights[j] + 1 if row[j] else 0
            
            # Count submatrices for current row using stack
            stack = []
            sums = [0] * n
            for j in range(n):
                while stack and heights[stack[-1]] >= heights[j]:
                    stack.pop()
                if stack:
                    prev = stack[-1]
                    sums[j] = sums[prev] + heights[j] * (j - prev)
                else:
                    sums[j] = heights[j] * (j + 1)
                stack.append(j)
                result += sums[j]
        
        return result
