class Solution(object):
    def longestSubarray(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        left=0
        zero=0
        max_vol=0

        for right in range(len(nums)):
            if nums[right]==0:
                zero+=1

            while zero>1:
                if nums[left]==0:
                    zero-=1
                left+=1
            max_vol=max(max_vol,right-left)

        return max_vol    


        
