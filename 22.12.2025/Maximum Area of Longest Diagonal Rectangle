class Solution(object):
    def areaOfMaxDiagonal(self, dimensions):
        max_diagonal = 0
        max_area = 0
        
        """"Loop over rectangles"""
        for length , width in dimensions:
            diagSquare = length * length + width * width
            area = length * width

            """conditions"""
            if diagSquare > max_diagonal:
                max_diagonal = diagSquare
                max_area = area
            
            elif diagSquare == max_diagonal and area > max_area:
                max_area = area
            
        return max_area    
      
        
