class Solution:
    def minOperations(self, nums):
        def gcd(a, b):
            while b:
                a, b = b, a % b
            return a

        n = len(nums)
        overall_gcd = nums[0]

        # Step 1: Compute overall gcd
        for num in nums:
            overall_gcd = gcd(overall_gcd, num)
        
        # Step 2: Impossible if gcd > 1
        if overall_gcd != 1:
            return -1
        
        # Step 3: If there are existing 1s
        ones = nums.count(1)
        if ones > 0:
            return n - ones
        
        # Step 4: Find shortest subarray whose gcd == 1
        res = float('inf')
        for i in range(n):
            current_gcd = nums[i]
            for j in range(i + 1, n):
                current_gcd = gcd(current_gcd, nums[j])
                if current_gcd == 1:
                    res = min(res, j - i + 1)
                    break
        
        # Step 5: Return total operations
        return (res - 1) + (n - 1)
