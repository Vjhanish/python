class Solution(object):
    def isOneBitCharacter(self, bits):
        n = len(bits)
        if n == 1:
            return bits[0] == 0
        if n == 2:
            return bits[-2] == 0 and bits[-1] == 0
        i = 0
        while i < n - 1:
            if bits[i] == 1:
                i += 2
            else:
                i += 1
        return i == n - 1
